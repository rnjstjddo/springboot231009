{{>layout/header}}
<article>
    <!-- Post header-->
    <header class="mb-4">
        <!-- Post title-->
        <h1 class="fw-bolder mb-1">게시글</h1>
    </header>
    <br>
    <br>
    <div class="container">
        <div class="h4 pb-2 mb-4 text-primary border-bottom border-primary">
            게시글수정
        </div>

        <a class="btn btn-outline-success" href="/">게시글 목록으로</a>
        <form>
        <br>
        <br>
        <div class="mb-3">
            게시글번호
            <input class="form-control" type="text"  name="id" id="id" value="{{post.id}}"readonly/>
        </div>

        <br>
        <br>
        <div class="mb-3">
            게시글제목
            <input class="form-control" type="text"  name="title" id="title" value="{{post.title}}" required/>
        </div>
        <br>
        <br>

        <div class="mb-3">
            게시글작성자
            <input class="form-control" type="text"  name="author"  id="author"  value="{{post.author}}"  />
        </div>
        <br>
        <br>

        <div class="mb-3">
            게시글내용
            <textarea class="form-control" name="content" id="content" required>{{post.content}}</textarea>
        </div>
        <br>
        <br>

        <div class="mb-3">
            게시글작성일자
            <input class="form-control" type="text"  name="createdDate"  id="createdDate"  value="{{post.createdDate}}"  readonly/>
        </div>

        <br>
        <br>
        <div class="mb-3">
            게시글수정일자
            <input class="form-control" type="text"  name="modifiedDate"  id="modifiedDate"  value="{{post.modifiedDate}}" readonly />
        </div>


        <div class="col-12" style="text-align: center;">
            <a role="button" href="/" style="display :inline-block;" class="btn btn-outline-secondary">취소</a>
            <button type="submit" style="display :inline-block;" class="btn btn-outline-primary" id="modifyBtn">게시글 저장하기</button>
            <button type="submit" style="display :inline-block;" class="btn btn-outline-danger" id="removeBtn">게시글 삭제하기</button>

        </div>

        </form>
    </div>

</article>

{{>layout/footer}}
